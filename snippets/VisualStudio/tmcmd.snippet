<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
    <SnippetTypes>
      <SnippetType>
        Expansion
      </SnippetType>
      </SnippetTypes>
        <Header>
            <Title>TinyMvvm Command</Title>
            <Author>Daniel Hindrikes</Author>
            <Description>Create a TinyMvvm Command</Description>
                <Shortcut>tmcmd</Shortcut>
            </Header>
            <Snippet>
                <Code Language="CSharp">
                   <![CDATA[private ICommand? $name$;
public ICommand $pname$ => $name$ ??= new TinyCommand(async() => {
    $end$
});]]>
                </Code>
              <Declarations>
                <Literal>
                  <ID>name</ID>
                  <ToolTip>The name of the backing field for the command</ToolTip>
                  <Default>name</Default>
                </Literal>
                <Literal>
                  <ID>pname</ID>
                  <ToolTip>The name of the property</ToolTip>
                  <Default>Name</Default>
                </Literal>
              </Declarations>
                <Imports>
                    <Import>
                        <Namespace>TinyMvvm</Namespace>
                    </Import>
                  <Import>
                    <Namespace>System.Windows.Input</Namespace>
                  </Import>
                </Imports>
            </Snippet>
        </CodeSnippet>
    </CodeSnippets>