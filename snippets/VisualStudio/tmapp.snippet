        <Header>
            <Title>TinyMvvm OnAppearing</Title>
            <Author>Daniel Hindrikes</Author>
            <Description>Create an override for the OnAppearing method</Description>
                <Shortcut>tmapp</Shortcut>
            </Header>
            <Snippet>
                <Code Language="CSharp">
                    <![CDATA[public async override Task OnAppearing()
{
    await base.OnAppearing();

    $end$
}]]>
                </Code>
                <Imports>
                    <Import>
                        <Namespace>TinyMvvm</Namespace>
                    </Import>
                </Imports>
            </Snippet>
        </CodeSnippet>
